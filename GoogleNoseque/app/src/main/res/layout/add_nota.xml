<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/tituloNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecuperarPassEmail" />

    <EditText
        android:id="@+id/descripcionNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/tituloNota"
        app:layout_constraintStart_toStartOf="@+id/tituloNota"
        app:layout_constraintTop_toBottomOf="@+id/tituloNota" />

    <EditText
        android:id="@+id/categoriaNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Categoria (2)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/descripcionNota"
        app:layout_constraintStart_toStartOf="@+id/descripcionNota"
        app:layout_constraintTop_toBottomOf="@+id/descripcionNota" />
</android.support.constraint.ConstraintLayout>